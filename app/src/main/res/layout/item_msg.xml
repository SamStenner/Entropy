<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:paddingLeft="4dp"
    android:paddingTop="@dimen/message_padding"
    android:paddingRight="4dp"
    android:paddingBottom="@dimen/message_padding"
    android:focusable="true">

    <TextView
        android:id="@+id/lbl_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/time_padding_collapsed"
        android:paddingBottom="6dp"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="18 Dec 2019 AT 00:37"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"
        android:textSize="12sp"
        tools:text="@string/debug_username" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/colorMessage"
        app:cardCornerRadius="@dimen/message_corner_radius"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:minWidth="64dp"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="18dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/lbl_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/message_text_size"
                tools:text="@string/debug_text_body" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>