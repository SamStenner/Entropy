<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    android:paddingStart="32dp"
    android:paddingTop="18dp"
    android:paddingEnd="32dp"
    android:paddingBottom="18dp">

    <TextView
        android:id="@+id/lbl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/time_padding_collapsed"
        android:paddingBottom="6dp"
        android:textSize="12sp"
        tools:text="12 Dec" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/colorAnnouncement"
        app:cardCornerRadius="@dimen/message_corner_radius"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="16dp"
            android:paddingBottom="28dp">

            <TextView
                android:id="@+id/lbl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/ic_pin"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/google_sans_bold"
                tools:text="@string/debug_pin" />

            <TextView
                android:id="@+id/lbl_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="@string/debug_text_body" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>