<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--  Both Themes, Any API  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:navigationBarColor">@color/colorStatusBar</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
    </style>

    <style name="AppTheme.General" parent="AppTheme">

    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <!--  Light Theme, API < API 23  -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MessageTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSendBox</item>
        <item name="hintTextColor">@color/colorSendBox</item>
    </style>

    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/dialog_corner_radius</item>
    </style>

</resources>
